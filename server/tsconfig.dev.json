{
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
